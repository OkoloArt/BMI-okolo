<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BMIokolo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BMIokolo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BMIokolo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BMIokolo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="category_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/width_with_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#3D3D3D</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontStyle">normal</item>
    </style>

    <style name="number_picker">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/width_with_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="share_rate_material_button">
        <item name="android:background">@drawable/button_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:layout_marginStart">33dp</item>
        <item name="android:layout_width">@dimen/width_with_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="calculate_button">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="backgroundTint">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/calculate</item>
    </style>

    <style name="personal_details_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/add_personal_details</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#19769F</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="calculate_bmi_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/calculate_bmi_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#C0C0C0</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_bmi</item>
        <item name="postSplashScreenTheme">@style/Theme.BMIokolo</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="body_mass_index">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:alpha">0.4</item>
        <item name="android:text">@string/body_mass_index_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="body_mass_index_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/default_bmi_value</item>
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="hello_name_results">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/default_index_category</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">29dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bmi_category_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12.5sp</item>
       <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>